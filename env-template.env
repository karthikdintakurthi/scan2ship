# ========================================
# VANITHA LOGISTICS - ENVIRONMENT CONFIGURATION
# ========================================
# ⚠️  SECURITY WARNING: This file contains sensitive configuration
# DO NOT commit this file to version control
# DO NOT share this file with unauthorized personnel
# DO NOT use these values in client-side code

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Database Security Configuration
DB_MAX_QUERY_TIMEOUT="30000"  # Maximum query timeout in milliseconds (30 seconds)
DB_MAX_RESULTS="1000"         # Maximum results per query
DB_LOG_SLOW_QUERIES="false"   # Enable slow query logging (true/false) - DISABLE IN PRODUCTION
DB_SLOW_QUERY_THRESHOLD="1000" # Slow query threshold in milliseconds
DB_POOL_MIN="2"               # Minimum connection pool size
DB_POOL_MAX="10"              # Maximum connection pool size
DB_POOL_ACQUIRE_TIMEOUT="30000" # Connection acquisition timeout
DB_POOL_IDLE_TIMEOUT="30000"  # Connection idle timeout

# Authentication & Security (CRITICAL - Keep Secret)
JWT_SECRET="your-super-secure-jwt-secret-key-here-minimum-32-characters"
ENCRYPTION_KEY="your-super-secure-encryption-key-here-minimum-32-characters"

# Security Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001,https://yourdomain.com"  # Comma-separated list of allowed origins
RATE_LIMIT_ENABLED="true"     # Enable rate limiting (true/false)
RATE_LIMIT_AUTH_MAX="5"       # Maximum authentication attempts per 15 minutes
RATE_LIMIT_API_MAX="100"      # Maximum API requests per 15 minutes
RATE_LIMIT_UPLOAD_MAX="10"    # Maximum file uploads per 15 minutes
FILE_UPLOAD_MAX_SIZE="5242880" # Maximum file size in bytes (5MB)
FILE_UPLOAD_MAX_FILES="5"     # Maximum files per request

# Application Configuration
NODE_ENV="development"        # development, production, test
DEBUG="false"                 # Enable debug mode (true/false) - DISABLE IN PRODUCTION
PORT="3000"                   # Application port

# OpenAI Configuration (API Key - Keep Secret)
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_MODEL="gpt-4o-mini"    # OpenAI model to use

# Delhivery Configuration (API Keys - Keep Secret)
DELHIVERY_BASE_URL="https://track.delhivery.com"
DELHIVERY_WEBHOOK_SECRET="your_webhook_secret_here"

# Fast2SMS WhatsApp Configuration (API Keys - Keep Secret)
FAST2SMS_WHATSAPP_API_KEY="your_fast2sms_whatsapp_api_key_here"
FAST2SMS_WHATSAPP_MESSAGE_ID="your_message_id_here"

# File Upload Configuration
UPLOAD_DIR="uploads"          # Directory for file uploads
MAX_FILE_SIZE="5MB"           # Maximum file size
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,webp,pdf,txt,doc,docx"  # Comma-separated list

# ========================================
# CLIENT-SIDE SAFE VARIABLES (NEXT_PUBLIC_)
# ========================================
# These variables are safe to expose to the client
# They contain NO sensitive information

NEXT_PUBLIC_APP_NAME="Vanitha Logistics"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_SUPPORT_EMAIL="support@vanithalogistics.com"

# ========================================
# SECURITY NOTES
# ========================================
# 1. NEVER prefix sensitive variables with NEXT_PUBLIC_
# 2. API keys, secrets, and database URLs should NEVER be client-accessible
# 3. Use environment-specific files (.env.local, .env.production)
# 4. Regularly rotate secrets and API keys
# 5. Monitor for unauthorized access attempts


