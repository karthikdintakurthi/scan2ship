# ========================================
# SCAN2SHIP SAAS - ENVIRONMENT TEMPLATE
# ========================================
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/scan2ship"

# Authentication & Security
JWT_SECRET="your-super-secure-jwt-secret-key-at-least-32-characters-long"
JWT_ISSUER="scan2ship-saas"
JWT_AUDIENCE="scan2ship-users"
ENCRYPTION_KEY="your_secure_encryption_key_here"

# Fast2SMS Configuration (for OTP)
FAST2SMS_API_KEY="your_fast2sms_api_key_here"

# Fast2SMS DLT Configuration (Recommended for India - better compliance)
# Register your sender ID and template at: https://www.fast2sms.com/dlt-manager
# NOTE: sender_id and template_id are REQUIRED for DLT SMS
# entity_id is optional and embedded in template registration
# If sender_id or template_id are missing, the system will automatically fallback to Quick SMS route
# 
# Template format: "Your OTP for tracking your orders is {#VAR#} - JUNIOR KIDS HUB"
# The {#VAR#} will be replaced with the OTP value automatically
# 
# Example values (update with your actual values):
FAST2SMS_DLT_SENDER_ID="JKSHUB"  # Short sender ID code (e.g., "JKSHUB" not "JUNIOR KIDS HUB")
FAST2SMS_DLT_TEMPLATE_ID="208015"  # Numeric template ID from DLT Manager
FAST2SMS_DLT_ENTITY_ID=""  # Optional - usually embedded in template, leave empty if not needed
#
# For more details, see: docs/TRACKING_OTP_AUTHENTICATION.md

# Application Security
NEXT_PUBLIC_APP_PASSWORD="your_secure_app_password_here"
NEXT_PUBLIC_UPI_ID="your_upi_id_here"
NEXT_PUBLIC_PAYEE_NAME="your_payee_name_here"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_NAME="Scan2Ship - SaaS Logistics Platform"
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# Delhivery API Configuration
# Note: DELHIVERY_API_KEY is now managed at client level through pickup locations
DELHIVERY_BASE_URL="https://track.delhivery.com"
DELHIVERY_WEBHOOK_SECRET="your_delhivery_webhook_secret_here"

# OpenAI API Configuration (for address processing)
OPENAI_API_KEY="your_openai_api_key_here"
OPENAI_MODEL="gpt-4o-mini"


# Note: Google Cloud configuration removed as it's no longer needed

# Note: Email configuration removed as it's no longer needed

# File Upload Configuration
MAX_FILE_SIZE="5242880"  # 5MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif"

# Rate Limiting
RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS="100"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE_PATH="./logs/app.log"

# Catalog App Integration Configuration
CATALOG_APP_URL="http://localhost:3000"
NEXT_PUBLIC_CATALOG_APP_URL="http://localhost:3000"

# Shopify Integration Configuration
SHOPIFY_CLIENT_ID="your_shopify_app_client_id"
SHOPIFY_CLIENT_SECRET="your_shopify_app_client_secret"
SHOPIFY_WEBHOOK_SECRET="your_shopify_webhook_secret"
SHOPIFY_APP_URL="https://your-app.vercel.app"

# Shopify API Configuration (for updating orders with tracking)
SHOPIFY_SHOP_NAME="your-shop-name.myshopify.com"
SHOPIFY_ADMIN_ACCESS_TOKEN="your_shopify_admin_access_token"
SHOPIFY_API_VERSION="2023-10"

# Development Tools
NEXT_TELEMETRY_DISABLED="1"
DEBUG="app:*"

# Rate Limiting (for testing)
DISABLE_RATE_LIMIT="true"


