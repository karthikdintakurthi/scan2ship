{
  "name": "Order Tracking Update",
  "description": "Updates order tracking status by calling Delhivery APIs every hour",
  "schedule": "0 * * * *",
  "endpoint": "/api/cron/update-tracking-optimized",
  "method": "POST",
  "headers": {
    "Authorization": "Bearer YOUR_CRON_SECRET_HERE",
    "Content-Type": "application/json"
  },
  "environment_variables": {
    "CRON_SECRET": "your-secure-cron-secret-key-here"
  },
  "deployment_options": {
    "vercel": {
      "cron_jobs": [
        {
          "path": "/api/cron/update-tracking-optimized",
          "schedule": "0 * * * *"
        }
      ]
    },
      "railway": {
        "cron_jobs": [
          {
            "command": "curl -X POST https://your-app.railway.app/api/cron/update-tracking-optimized -H 'Authorization: Bearer YOUR_CRON_SECRET_HERE'",
            "schedule": "0 * * * *"
          }
        ]
      },
      "heroku": {
        "addons": ["scheduler:standard"],
        "scheduler_jobs": [
          {
            "command": "curl -X POST https://your-app.herokuapp.com/api/cron/update-tracking-optimized -H 'Authorization: Bearer YOUR_CRON_SECRET_HERE'",
            "schedule": "0 * * * *"
          }
        ]
      },
      "custom_server": {
        "crontab_entry": "0 * * * * curl -X POST https://your-domain.com/api/cron/update-tracking-optimized -H 'Authorization: Bearer YOUR_CRON_SECRET_HERE' >/dev/null 2>&1"
      }
  },
  "monitoring": {
    "health_check_endpoint": "/api/cron/update-tracking-optimized",
    "expected_response": {
      "success": true,
      "message": "Tracking update completed"
    },
    "alert_on_failure": true
  }
}
